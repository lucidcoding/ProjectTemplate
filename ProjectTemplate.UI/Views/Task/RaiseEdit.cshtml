@model ProjectTemplate.UI.ViewModels.TaskRaiseEditViewModel

@{
    ViewBag.Title = "Raise";
}

<h2>Raise</h2>

@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>*@

@using (Html.BeginForm(Model.SubmitButtonAction, "Task")) {
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.TaskId)
    <div class="editor-label">
        @Html.LabelFor(model => model.Description)
    </div>
    <div class="editor-field">
        @Html.EditorFor(model => model.Description)
        @Html.ValidationMessageFor(model => model.Description)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.AssignedToId)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.AssignedToId, @Model.Assignees, "[Please Select...]")
        @Html.ValidationMessageFor(model => model.AssignedToId)
    </div>

    <div class="editor-label">
        @Html.LabelFor(model => model.TypeId)
    </div>
    <div class="editor-field">
        @Html.DropDownListFor(model => model.TypeId, @Model.TaskTypes, "[Please Select...]")
        @Html.ValidationMessageFor(model => model.TypeId)
    </div>

    <p>
        <input type="submit" value="@Model.SubmitButtonTitle" />
    </p>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
